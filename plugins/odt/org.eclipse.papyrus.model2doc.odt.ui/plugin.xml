<plugin>

<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup?after=newelements">
         <menu
               id="model2doc.odt.ui.share.export.modelexplorer.menu.label"
               label="%model2doc.odt.ui.share.export.menu.label">
            <command
                  commandId="org.eclipse.papyrus.model2doc.odt.ui.share.export.pdf.command"
                  label="%model2doc.odt.ui.share.export.pdf.command.label"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="selection">
                     <test
                           property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                           value="true">
                     </test>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup?after=newelements">
         <menu
               id="model2doc.odt.ui.share.send.modelexplorer.menu.label"
               label="%model2doc.odt.ui.share.send.menu.label">
            <command
                  commandId="org.eclipse.papyrus.model2doc.odt.ui.share.send.odt.command"
                  label="%model2doc.odt.ui.share.send.odt.command.label"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="selection">
                     <test
                           property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                           value="true">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.eclipse.papyrus.model2doc.odt.ui.share.send.pdf.command"
                  label="%model2doc.odt.ui.share.send.pdf.command.label"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="selection">
                     <test
                           property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                           value="true">
                     </test>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.papyrus.editor.category"
            description="%model2doc.odt.ui.share.send.odt.command.description"
            id="org.eclipse.papyrus.model2doc.odt.ui.share.send.odt.command"
            name="%model2doc.odt.ui.share.send.odt.command.label">
      </command>
      <command
            categoryId="org.eclipse.papyrus.editor.category"
            description="%model2doc.odt.ui.share.export.pdf.command.description"
            id="org.eclipse.papyrus.model2doc.odt.ui.share.export.pdf.command"
            name="%model2doc.odt.ui.share.export.pdf.command.label">
      </command>
      <command
            categoryId="org.eclipse.papyrus.editor.category"
            description="%model2doc.odt.ui.share.send.pdf.command.description"
            id="org.eclipse.papyrus.model2doc.odt.ui.share.send.pdf.command"
            name="%model2doc.odt.ui.share.send.pdf.command.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.papyrus.model2doc.odt.ui.share.handler.PDFExportHandler"
            commandId="org.eclipse.papyrus.model2doc.odt.ui.share.export.pdf.command">
            <activeWhen>
            <with
                  variable="selection">
               <test
                     property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                     value="true">
               </test>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.papyrus.model2doc.odt.ui.share.handler.SendMailHandler"
            commandId="org.eclipse.papyrus.model2doc.odt.ui.share.send.odt.command">
            <activeWhen>
            <with
                  variable="selection">
               <test
                     property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                     value="true">
               </test>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.papyrus.model2doc.odt.ui.share.handler.PDFSendMailHandler"
            commandId="org.eclipse.papyrus.model2doc.odt.ui.share.send.pdf.command">
         <activeWhen>
            <with
                  variable="selection">
               <test
                     property="org.eclipse.papyrus.model2doc.documentview.modelexplorer.documentPropertyTester.isDocument"
                     value="true">
               </test>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.eclipse.papyrus.model2doc.odt.ui.internal.propetytester.GenericODTDocumentTester"
            id="org.eclipse.papyrus.model2doc.odt.ui.propetytester.genericODTDocumentTester"
            namespace="org.eclipse.papyrus.model2doc.odt.ui.propetytester.genericODTDocumentTester"
            properties="isGenericODTDocument"
            type="org.eclipse.jface.viewers.IStructuredSelection">
      </propertyTester>
   </extension>
</plugin>
